<div class="card ">
  <div class="card-header card-primary">
    <h4>Login</h4>
  </div>
  <div class="card-body">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |sign_in| %>

      <div class="form-group">
        <%= sign_in.label :email %>
        <%= sign_in.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= sign_in.label :password %>
        <%= sign_in.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= sign_in.check_box :remember_me %>
          <%= sign_in.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= sign_in.submit "Log in", class: "btn btn-secondary" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
