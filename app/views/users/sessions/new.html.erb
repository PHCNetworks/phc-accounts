<!-- Page Container -->
<div id="page-container">

  <!-- Registration Area -->
  <div class="login login-with-news-feed">

    <!-- Ad/News Feed Area -->
    <div class="news-feed">
      <div class="news-image" style="background-image: url(https://static.phcnetworks.net/phc_engines/phc_accounts/tropical_house_beach.jpg)"></div>
      <div class="news-caption">
        <h4 class="caption-title"><strong>PHC</strong>ACCOUNTS</h4>
        <p>Rails5 User Accounts Engine</p>
      </div>
    </div>
    <!-- Ad/News Feed Area -->

    <!-- Registration Form -->
    <div class="right-content">
      <!-- Registration Form Header -->
      <h1 class="login-header">
        <div class="brand">
          PHCAccounts Sign-In
          <small>To continue account sign-in is required.</small>
        </div>
      </h1>
      <!-- Registration Form Header -->
      <!-- Registration Form Content -->
      <div class="login-content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |phc_accounts_sign_in| %>
          <%= devise_error_messages! %>
          <div class="form-group m-b-15">
            <%= phc_accounts_sign_in.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control form-control-lg" %>
          </div>
          <div class="form-group m-b-15">
            <%= phc_accounts_sign_in.password_field :password, autocomplete: "off", placeholder: "Your Password", class: "form-control form-control-lg" %>
          </div>
          <div class="checkbox checkbox-css m-b-30">
            <% if devise_mapping.rememberable? -%>
              <%= phc_accounts_sign_in.check_box :remember_me, class: "custom-control-input" %>
              <%= phc_accounts_sign_in.label :remember_me, class: "custom-control-label" %>
            <% end -%>
          </div>
          <div class="login-buttons">
            <%= phc_accounts_sign_in.button :submit, class: "btn btn-success btn-block btn-lg"  do %>
              <i class="batch-icon batch-icon-key"></i>
              Sign-In
            <% end %>
          </div>
          <div class="m-t-20 m-b-40 p-b-40 text-inverse">
            <%= render "users/shared/links" %>
          </div>
        <% end %>
        <hr />
        <p class="text-center text-grey-darker">
          &copy; <strong>PHC</strong>Accounts(Pro) All Right Reserved 2018
        </p>
      </div>
      <!-- Registration Form Content -->
      </div>
    <!-- Registration Form -->
    </div>

  <!-- Registration Area -->
  </div>

</div>
<!-- Page Container -->
