<div class="middle-box animated fadeInDown">

  <!-- Page Content -->
  <div class="row">
    <div class="col-lg-12">

      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Resend Unlock Instructions</h5>
        </div>
        <div class="ibox-content">
          <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>

            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control", placeholder: "Email Address", autofocus: true %>
            </div>

            <div class="actions">
              <%= f.submit "Resend unlock instructions", class: "btn btn-primary block full-width" %>
            </div>

          <% end %>

        </div>
      </div>


    </div>
  </div>
  <!-- Page Content -->

</div>
